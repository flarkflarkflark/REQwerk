{
  "name": "recwerk",
  "version": "1.0.2",
  "description": "RECwerk - Native Desktop Audio & Waveform Editor",
  "homepage": "https://flarkflarkflark.github.io/RECwerk/",
  "main": "index.js",
  "author": "flarkAUDIO",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flarkflarkflark/RECwerk.git"
  },
  "bugs": {
    "url": "https://github.com/flarkflarkflark/RECwerk/issues"
  },
  "scripts": {
    "start": "electron .",
    "build:win": "node node_modules/electron-builder/cli.js --win portable",
    "build:mac": "node node_modules/electron-builder/cli.js --mac zip",
    "build:linux": "node node_modules/electron-builder/cli.js --linux AppImage",
    "build:dir": "node node_modules/electron-builder/cli.js --dir"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.flarkaudio.recwerk",
    "productName": "RECwerk",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "flarkflarkflark",
        "repo": "RECwerk"
      }
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "img/app-icon.png"
    },
    "mac": {
      "target": [
        "zip"
      ],
      "icon": "img/app-icon.png",
      "category": "public.app-category.music",
      "identity": null
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "img/app-icon.png",
      "category": "AudioVideo"
    }
  }
}
